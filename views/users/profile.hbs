<div class="card mb-3 mx-auto" style="max-width: 800px">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" class="img-fluid rounded-start" alt="user_photo" style="width: 250px; max-height: 250px margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <ul class="list-unstyled">
          <li><strong>{{user.name}}</strong></li>
          <li>{{user.email}}</li>
          <li><strong>{{user.Comments.length}}</strong> 已評論餐廳</li>
        </ul>
        <a class="btn btn-outline-primary" href="/users/{{user.id}}/edit" role="button">Edit</a>
      </div>
    </div>
  </div>    
</div>

<div class="card">
  <div class="card-header">
    {{#ifCond user.Comments.length 0}}
      <h5 class="mb-3">目前沒有評論</h5>
    </div>
    {{else}}
      <h5 class="mb-3"><strong>{{user.Comments.length}}</strong> 已評論餐廳</h5>
    </div>    

    <div class="card-body">
    {{#each user.Comments}}
    <a href="/restaurants/{{this.Restaurant.id}}">
      <img src="{{this.Restaurant.image}}" alt="Restaurant-image" width="80" height="80">
    </a>
    {{/each}}
    </div>   
    {{/ifCond}}
</div>

